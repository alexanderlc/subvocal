{
    "id": "akka-worker-controller",
    "kind": "ReplicationController",
    "apiVersion": "v1beta1",
    "desiredState": {
        "replicas": 2,
        "replicaSelector": {"name": "akka", "role": "worker"},
        "podTemplate": {
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "id": "akka-worker-controller",
                    "containers": [{
                        "name": "akka-worker",
                        "image": "gcr.io/subvocal_01/subvocal-web:latest",
                        "cpu": 200,
                        "ports": [{"name": "akka-worker", "containerPort": 2551}],
                        "env": [{"name": "SPRING_PROFILE", "value": "worker"}]
                    }]
                }
            },
            "labels": { "name": "akka", "role": "worker" }
        }
    },
    "labels": { "name": "akka", "role": "worker" }
}